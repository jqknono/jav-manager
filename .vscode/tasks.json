{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task. Use npm run build for TypeScript.",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/JavManager/JavManager.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task.",
            "type": "process",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/publish.ps1",
                "win-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task.",
            "type": "process",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/release.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task. Use npm run dev:cli or npm run dev:gui.",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/JavManager/JavManager.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run:net10.0 (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task. Use npm run cli.",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/JavManager/JavManager.csproj",
                "--framework",
                "net10.0"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy:cloudflare",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "deploy"
            ],
            "options": {
                "cwd": "${workspaceFolder}/telemetry-worker"
            },
            "problemMatcher": []
        },
        {
            "label": "dev:cloudflare",
            "detail": "Run Cloudflare Worker dev server on 0.0.0.0:34044",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "dev",
                "--",
                "--local",
                "--port=34044",
                "--ip=0.0.0.0"
            ],
            "options": {
                "cwd": "${workspaceFolder}/telemetry-worker"
            },
            "problemMatcher": []
        },
        {
            "label": "build:npm (tsc)",
            "detail": "Build TypeScript output to dist/ via tsc",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "test:npm (node --test)",
            "detail": "Run build + node --test test/*.test.js",
            "type": "process",
            "command": "npm",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "pack:npm (dry-run)",
            "detail": "Preview npm tarball contents without publishing",
            "type": "process",
            "command": "npm",
            "args": [
                "pack",
                "--dry-run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "publish:npm (public)",
            "detail": "Publish to npm registry as a public package. Requires prior npm login (npm adduser).",
            "type": "process",
            "command": "npm",
            "args": [
                "publish",
                "--access",
                "public"
            ],
            "dependsOn": [
                "test:npm (node --test)",
                "pack:npm (dry-run)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}

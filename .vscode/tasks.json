            "detail": "DEPRECATED: legacy .NET task. Use npm run build for TypeScript.",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/JavManager/JavManager.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task.",
            "type": "process",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/publish.ps1",
                "win-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task.",
            "type": "process",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts/release.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task. Use npm run dev:cli or npm run dev:gui.",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/JavManager/JavManager.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run:net10.0 (deprecated: legacy .NET)",
            "detail": "DEPRECATED: legacy .NET task. Use npm run cli.",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/JavManager/JavManager.csproj",
                "--framework",
                "net10.0"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy:cloudflare",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "deploy"
            ],
            "options": {
                "cwd": "${workspaceFolder}/telemetry-worker"
            },
            "problemMatcher": []
        },
        {
            "label": "dev:cloudflare",
            "detail": "Run Cloudflare Worker dev server on 0.0.0.0:34044",
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "dev",
                "--",
                "--local",
                "--port=34044",
                "--ip=0.0.0.0"
            ],
            "options": {
                "cwd": "${workspaceFolder}/telemetry-worker"
            },
            "problemMatcher": []
        }

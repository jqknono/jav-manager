<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JavManager.Gui.ViewModels"
        xmlns:views="using:JavManager.Gui.Views"
        x:Class="JavManager.Gui.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="{Binding Title}"
        Width="900" Height="650"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <TabControl SelectedIndex="{Binding SelectedTabIndex}" Padding="8">
        <TabItem Header="{Binding Loc[Gui_Tab_Search]}">
            <views:SearchView DataContext="{Binding SearchViewModel}" />
        </TabItem>
        <TabItem Header="{Binding Loc[Gui_Tab_Downloads]}">
            <views:DownloadsView DataContext="{Binding DownloadsViewModel}" />
        </TabItem>
        <TabItem Header="{Binding Loc[Gui_Tab_Settings]}">
            <views:SettingsView DataContext="{Binding SettingsViewModel}" />
        </TabItem>
    </TabControl>
</Window>
